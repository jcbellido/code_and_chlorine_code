<Window x:Class="PropertyAttributes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="350"
        Width="400">
  <StackPanel>
    <Rectangle Fill='Orange'
               Height='90'
               Width='60'
               Margin='20,10,20,-20' />
    <Ellipse Width='200'
             Height='160'
             Opacity='.7'>
      <Ellipse.Fill>
        <RadialGradientBrush>
          <GradientStop Color='#FF9719C7'
                        Offset='0' />
          <GradientStop Color='#FFE28A20'
                        Offset='1' />
          <GradientStop Color='#FF9EA41C'
                        Offset='0.523' />
        </RadialGradientBrush>
      </Ellipse.Fill>
    </Ellipse>

  </StackPanel>
</Window>
